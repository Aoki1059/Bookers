<h1 class="head1">Books</h1>
<table>
  <thead>
    <tr class="item">
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td class="link"><%= link_to 'Show', book_path(book.id) %></td>
       <td class="link"><%= link_to 'Edit', edit_book_path(book.id) %></td>
       <td class="link"><%= link_to 'Destroy', book, method: :delete, 'date-confirm'=>"Are you sure?" %></td>
     </tr>
    <% end %>
  </tbody>
</table>
<h2 class="head2">New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <div class="field">
  <%= f.label :Title %><br>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <%= f.label :Body %><br>
  <%= f.text_area :body %>
 </div>
 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>